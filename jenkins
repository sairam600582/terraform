pipeline {
    agent any

    environment {
        GIT_URL = 'https://github.com/your-username/your-repo.git'
        GIT_BRANCH = 'main' // or whichever branch you want
    }

    stages {
        stage('Checkout') {
            steps {
                sh "git clone -b $GIT_BRANCH $GIT_URL"
            }
        }

        stage('Terraform Init') {
            steps {
                dir('your-repo') { // match folder cloned
                    sh 'terraform init -reconfigure'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('your-repo') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('your-repo') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
